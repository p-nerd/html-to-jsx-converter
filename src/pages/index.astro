---
import { Converter } from "@/components/screens/converter";

import Layout from "@/layouts/Layout.astro";

const title = "HTML to React JSX Converter";
const description =
    "Convert your HTML code to React JSX quickly and easily. Paste your HTML in the below and get JSX.";
---

<Layout
    title={title}
    description={description}
    class="flex h-screen max-h-screen w-full flex-col items-center justify-center"
>
    <h2 class="mb-2 text-2xl font-bold">{title}</h2>
    <p class="mb-6 text-gray-600 dark:text-gray-400">{description}</p>
    <Converter client:load />
</Layout>
